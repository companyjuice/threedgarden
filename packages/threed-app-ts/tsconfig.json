{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    // rules
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "incremental": true,
    // directories + paths
    "rootDirs": [".", "../common/src"],
    "baseUrl": ".",
    "paths": {
      "#/*": ["./*"], // preferable (next-13)
      "~/*": ["./*", "src/*"], // preferable (next, nuxt, supports npm @ confusion)
      "@/*": ["src/*"], // deprecated (npm @)
      "~~/*": ["./*"], // (eth)
      "~common/*": ["../common/src/*"], // (eth~common)
      "-||-*": ["assets/*"] // threeds (-||-)
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    // plugins
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"], // NEXT 12 + 13
  "exclude": [
    "node_modules",
    ".husky",
    "**/*.css",
    // "tailwind.config.js",
    "**/.yalc/**/*",
    ".yalc/**/*"
  ]
}
