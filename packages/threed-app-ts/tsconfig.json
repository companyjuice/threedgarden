{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext", "es2015.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "incremental": true,
    "rootDirs": [".", "../common/src"],
    "baseUrl": ".",
    "paths": {
      "#/*": ["./*"], // preferable (next-13)
      "~/*": ["src/*", "app/*"], // preferable (next, nuxt, supports npm @ confusion)
      "@/*": ["src/*"], // deprecated (npm @)
      "~~/*": ["./src/*", "app/*"], // (eth)
      "~common/*": ["../common/src/*"], // (eth~common)
      "-||-*": ["assets/*"] // threeds (-||-)
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  // "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"]
  "include": ["src", "../common/src", "app", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/node_modules",
    ".husky",
    "**/*.css",
    "tailwind.config.js",
    "**/.yalc/**/*",
    ".yalc/**/*"
  ]
}
