{
  "liveServer.settings.host": "localhost",
  "liveServer.settings.root": "/public/demo",
  "liveServer.settings.multiRootWorkspaceName": "/public/demo",

  "git.enableSmartCommit": true,
  
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.cache": true,
    "**/.vs/": true,
    "**/*.cs": true,
    "**/*.orig": true,
    "**/bin/": true,
    "**/build/": true,
    "**/debug/": true,
    "**/dist/": true,
    "**/node_modules/": true,
    "**/obj": true,
    "yarn-error.log": true,
    "**/yarn-error.log": true,
    "packages\\eth-hooks/lib": true
  },

  "search.exclude": {
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/yarn-error.log": true,
    "**/yarn.lock": true,
  },
  
  // "eslint.workingDirectories": [
  //   { "directory": "packages/threed/eth-hooks", "changeProcessCWD": true },
  //   { "directory": "packages/threed/hardhat-ts", "changeProcessCWD": true },
  //   { "directory": "packages/threed/vite-app-ts", "changeProcessCWD": true },
  // ],

  "solidity.packageDefaultDependenciesDirectory": "node_modules/@threed/hardhat/node_modules/",
  "solidity-va.test.defaultUnittestTemplate": "hardhat"
}