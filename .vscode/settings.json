{
  "files.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.cache": true,
    "**/.vs/": true,
    "**/.vscode/": false,
    "**/*.cs": true,
    "**/*.orig": true,
    "**/bin/": true,
    "**/build/": false,
    "**/build/**/*": false,
    "**/debug/": false,
    "**/dist/": false,
    "**/node_modules/": false,
    "**/obj": false,
    "yarn-error.log": true,
    "**/yarn-error.log": true,
    "**/.yalc": true
  },

  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.cache": true,
    "**/.vs/": true,
    "**/*.cs": true,
    "**/*.orig": true,
    "**/bin/": true,
    "**/build/": true,
    "**/build/**/*": true,
    "**/debug/": true,
    "**/dist/": true,
    "**/obj": true,
    "node_modules": true,
    "node_modules/*/**": true,
    "**/node_modules": true,
    "yarn-error.log": true,
    "**/yarn-error.log": true,
    "**/.yalc": true,
    "**/.yarn": true,
    "**/yarn.lock": true,
    "yarn.lock": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
  },

  "explorerExclude.backup": null,

  "eslint.debug": true,
  "eslint.enable": true,
  "eslint.workingDirectories": [
    { "directory": "packages/*", "changeProcessCWD": true },
    { "directory": "packages/solidity-ts", "changeProcessCWD": true },
    { "directory": "packages/vite-app-ts", "changeProcessCWD": true },
    { "directory": "packages/nextjs-app-ts", "changeProcessCWD": true },
    { "directory": "packages/threed-app-ts", "changeProcessCWD": true },
    { "directory": "packages/common", "changeProcessCWD": true },
    { "directory": "packages/subgraph", "changeProcessCWD": true },
    { "directory": "packages/services", "changeProcessCWD": true },
    { "directory": "packages/commands", "changeProcessCWD": true }
  ],

  "solidity.packageDefaultDependenciesDirectory": "packages/solidity-ts/node_modules",
  "solidity.formatter": "prettier", // This is the default so it might be missing.
  "[solidity]": {
    "editor.defaultFormatter": "NomicFoundation.hardhat-solidity"
  },
  "solidity.defaultCompiler": "localNodeModule",

  "mochaExplorer.configFile": "./packages/solidity-ts/.mocharc.json"
}
